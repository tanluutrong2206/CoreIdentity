@if(User.Identity != null && User.Identity.IsAuthenticated) {
    <form method="post" asp-page="/Account/Logout" class="form-inline">
        Welcome @User.Identity.Name (@User.Claims.First(x => x.Type == "Address"))
        <button class="btn btn-link ml-2" type="submit">Logout</button>
    </form>
} else {
    <a class="btn btn-link" asp-page="/Account/Login">Login</a>
}