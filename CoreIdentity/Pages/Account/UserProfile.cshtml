@page
@model CoreIdentity.Pages.Account.UserProfileModel
@{
}
<h3>User Profile</h3>
<div class="container border p-5">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserProfileViewModel.Email"></label>
            </div>
            <div class="col-5">
                <input type="text" class="form-control" asp-for="UserProfileViewModel.Email" readonly/>
                <span class="text-danger" asp-validation-for="UserProfileViewModel.Email"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserProfileViewModel.Address"></label>
            </div>
            <div class="col-5">
                <input class="form-control" asp-for="UserProfileViewModel.Address" />
                <span class="text-danger" asp-validation-for="UserProfileViewModel.Address"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserProfileViewModel.IdentityCard"></label>
            </div>
            <div class="col-5">
                <input class="form-control" asp-for="UserProfileViewModel.IdentityCard" />
                <span class="text-danger" asp-validation-for="UserProfileViewModel.IdentityCard"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Update Profile" />
            </div>
            <div class="col-5">
            </div>
        </div>
    </form>
</div>
@if(!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success" role="alert">@Model.SuccessMessage</div>
}