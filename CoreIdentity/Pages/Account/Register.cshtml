@page
@model CoreIdentity.Pages.Account.RegisterModel
@{
}
<h3>User Registration</h3>
<div class="container border p-5">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="RegisterViewModel.Email"></label>
            </div>
            <div class="col-5">
                <input type="text" class="form-control" asp-for="RegisterViewModel.Email" />
                <span class="text-danger" asp-validation-for="RegisterViewModel.Email"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="RegisterViewModel.Password"></label>
            </div>
            <div class="col-5">
                <input type="password" class="form-control" asp-for="RegisterViewModel.Password" />
                <span class="text-danger" asp-validation-for="RegisterViewModel.Password"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="RegisterViewModel.Address"></label>
            </div>
            <div class="col-5">
                <input class="form-control" asp-for="RegisterViewModel.Address" />
                <span class="text-danger" asp-validation-for="RegisterViewModel.Address"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="RegisterViewModel.IdentityCard"></label>
            </div>
            <div class="col-5">
                <input class="form-control" asp-for="RegisterViewModel.IdentityCard" />
                <span class="text-danger" asp-validation-for="RegisterViewModel.IdentityCard"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Register" />
            </div>
            <div class="col-5">
            </div>
        </div>
    </form>
</div>